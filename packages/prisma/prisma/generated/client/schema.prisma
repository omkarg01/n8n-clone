generator client {
  provider = "prisma-client-js"
  output   = "./prisma/generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int          @id @default(autoincrement())
  email       String       @unique
  password    String
  workflows   Workflow[]
  credentials Credential[]
}

model Workflow {
  id          Int  @id @default(autoincrement())
  nodes       Json
  connections Json
  userId      Int
  user        User @relation(fields: [userId], references: [id])
}

model AvailableTrigger {
  id   Int    @id @default(autoincrement())
  name String
}

model AvailableAction {
  id   Int    @id @default(autoincrement())
  name String
}

model Credential {
  id     Int    @id @default(autoincrement())
  title  String
  data   Json
  userId Int
  user   User   @relation(fields: [userId], references: [id])
}
